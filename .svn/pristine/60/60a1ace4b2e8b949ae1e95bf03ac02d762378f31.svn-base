@import "./var.less";
.ix-inputnumber{
  width: 180px;
  display: inline-flex;
  vertical-align: middle;
  .ix-input{
    width: 100%;
  }
  .ix-input-inner{
    text-align: center;
  }
  .pos_right{
    display: flex;
    flex-direction: column;
    >.ix-button{
      border-radius: 0;
      border: 0;
      padding: 0 4px;
      background: none;
      &:first-child{
        border-bottom: 1px solid #eee;
      }
    }
  }
  &.ix-medium{
    >.ix-input > .ix-input-append .ix-button, >.ix-input > .ix-input-prepend .ix-button{ min-width: 30px }
    width: 160px;
  }
  &.ix-small{
    >.ix-input > .ix-input-append .ix-button, >.ix-input > .ix-input-prepend .ix-button{ min-width: 25px }
    width: 130px;
  }
  &.ix-mini{
    >.ix-input > .ix-input-append .ix-button, >.ix-input > .ix-input-prepend .ix-button{ min-width: 20px }
    width: 100px;
  }
}
