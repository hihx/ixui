@import "./var.less";
.ix-alert{
  font-size: 13px;
  margin: 10px;
  padding: 8px 10px;
  border-radius: 4px;
  display: flex;
  align-items: center;
  .ix-alert-right{
    flex: 1;
  }
  .ix-alert-content{
    font-size: 12px;
  }
  .ix-close{
    font-size: 14px;
    cursor: pointer;
  }
  .conIco{
    margin-right: 10px;
  }
  &.ix-success{
    color: @color-success;
    background: @color-success + 120;
  }
  &.ix-info{
    color: @color-info;
    background: @color-info + 100;
  }
  &.ix-warning{
    color: @color-warning;
    background: @color-warning + 150;
  }
  &.ix-error{
    color: @color-danger;
    background: @color-danger + 120;
  }
}


